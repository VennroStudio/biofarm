{
    "name": "biofarm/backend",
    "description": "Biofarm API Backend",
    "type": "project",
    "require": {
        "php": "^8.1",
        "slim/slim": "^4.12",
        "slim/psr7": "^1.6",
        "slim/http": "^1.3",
        "nyholm/psr7": "^1.8",
        "nyholm/psr7-server": "^1.1",
        "monolog/monolog": "^3.0",
        "vlucas/phpdotenv": "^5.5",
        "doctrine/orm": "^2.16",
        "doctrine/dbal": "^3.8",
        "doctrine/annotations": "^2.0",
        "doctrine/migrations": "^3.7",
        "symfony/validator": "^6.4",
        "symfony/cache": "^7.4"
    },
    "require-dev": {
        "phpunit/phpunit": "^10.0"
    },
    "autoload": {
        "psr-4": {
            "App\\": "src/"
        }
    },
    "scripts": {
        "start": "php -S 0.0.0.0:8000 -t public public/index.php"
    }
}
