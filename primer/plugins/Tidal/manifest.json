{
    "version": "1.0",
    "manifest_version": 3,
    "permissions": [
        "storage",
        "declarativeNetRequest",
        "declarativeNetRequestFeedback"
    ],
    "declarative_net_request": {
        "rule_resources": [
            {
                "id": "ruleset_1",
                "enabled": true,
                "path": "rules_1.json"
            }
        ]
    },
    "host_permissions": [
        "<all_urls>"
    ],
    "name": "LO Tidal",
    "description": "LO Tidal",
    "icons": {
        "48": "/src/images/icon.png"
    },
    "background": {
        "service_worker": "/src/js/background.js"
    },
    "content_scripts": [
        {
            "matches": ["*://*.tidal.com/*"],
            "css": ["/src/css/main.css"],
            "js": [
                "/src/js/helpers/jquery.js",
                "/src/js/helpers/jquery-ui.js",
                "/src/js/main.js",
                "/src/js/helpers/helpers.js",
                "/src/js/tidal/Tidal.js",
                "/src/js/tidal/TidalUI.js"
            ],
            "run_at": "document_end"
        }
    ]
}


